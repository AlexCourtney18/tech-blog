<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
      <textarea name="post-text" class="form-control" id="post-text" name="post-text" row="3" value="{{post.post_text}}"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Save post</button>
    <button type="button" class="btn btn-danger" id="delete-post-btn">Delete post</button>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
  </form>
</article>
