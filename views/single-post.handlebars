<article class="post">
    {{> post-info post }}
    <div>
    {{> post-text post }}
    </div>
</article>
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit" class="btn btn-success">add comment</button>
    </div>
</form>
{{/if}}

<div class="comments">
    {{> comments post.comments}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}